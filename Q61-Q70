// 61. search for an element in an array using linear search.
#include <stdio.h>

int main() {
    int n, i, key, a[100];
    printf("Enter size: ");
    scanf("%d", &n);

    printf("Enter elements: ");
    for(i=0; i<n; i++) scanf("%d", &a[i]);

    printf("Enter element to search: ");
    scanf("%d", &key);

    for(i=0; i<n; i++) {
        if(a[i] == key) {
            printf("Found at index %d\n", i);
            return 0;
        }
    }
    printf("Not found\n");
}

// 62. reverse an array without taking extra space.
#include <stdio.h>

int main() {
    int n, a[100], i, temp;
    scanf("%d", &n);
    for(i=0; i<n; i++) scanf("%d", &a[i]);

    for(i=0; i<n/2; i++) {
        temp = a[i];
        a[i] = a[n-i-1];
        a[n-i-1] = temp;
    }

    for(i=0; i<n; i++) printf("%d ", a[i]);
}

// 63. merge two arrays.
#include <stdio.h>

int main() {
    int n1, n2;
    scanf("%d", &n1);
    int a[n1];
    for(int i=0; i<n1; i++) scanf("%d", &a[i]);

    scanf("%d", &n2);
    int b[n2];
    for(int i=0; i<n2; i++) scanf("%d", &b[i]);

    int c[n1+n2], k = 0;

    for(int i=0; i<n1; i++) c[k++] = a[i];
    for(int i=0; i<n2; i++) c[k++] = b[i];

    for(int i=0; i<k; i++) printf("%d ", c[i]);
    return 0;
}

// 64. find digits that occurs the most times in an integer number.
#include <stdio.h>

int main() {
    int n, freq[10] = {0};
    scanf("%d", &n);

    if (n < 0) n = -n;

    while(n > 0) {
        freq[n % 10]++;
        n /= 10;
    }

    int maxDigit = 0;
    for(int i=1; i<10; i++)
        if(freq[i] > freq[maxDigit])
            maxDigit = i;

    printf("Most frequent digit = %d", maxDigit);
    return 0;
}

// 65. search in a sorted array using binary search.
#include <stdio.h>

int main() {
    int n, key;
    scanf("%d", &n);

    int a[n];
    for(int i=0; i<n; i++) scanf("%d", &a[i]);

    scanf("%d", &key);

    int low=0, high=n-1, mid, found=0;

    while(low <= high) {
        mid = (low+high)/2;

        if(a[mid] == key) { found=1; break; }
        else if(a[mid] < key) low = mid + 1;
        else high = mid - 1;
    }

    if(found) printf("Found at index %d", mid);
    else printf("Not found");

    return 0;
}

// 66. insert an element in a sorted array at the apprepriate position.
#include <stdio.h>

int main() {
    int n, x;
    scanf("%d", &n);

    int a[n+1];
    for(int i=0; i<n; i++) scanf("%d", &a[i]);

    scanf("%d", &x);

    int i;
    for(i=n-1; i>=0 && a[i] > x; i--)
        a[i+1] = a[i];

    a[i+1] = x;

    for(i=0; i<=n; i++)
        printf("%d ", a[i]);

    return 0;
}

// 67. insert an element in an array at a given position.
#include <stdio.h>

int main() {
    int n, pos, x;
    scanf("%d", &n);
    int a[n+1];

    for(int i=0; i<n; i++) scanf("%d", &a[i]);

    scanf("%d %d", &x, &pos); // element, position

    for(int i=n; i>=pos; i--)
        a[i] = a[i-1];

    a[pos-1] = x;

    for(int i=0; i<=n; i++)
        printf("%d ", a[i]);
    return 0;
}

// 68. delete an element from an array.
#include <stdio.h>

int main() {
    int n, pos;
    scanf("%d", &n);

    int a[n];
    for(int i=0; i<n; i++) scanf("%d", &a[i]);

    scanf("%d", &pos);

    for(int i=pos-1; i<n-1; i++)
        a[i] = a[i+1];

    for(int i=0; i<n-1; i++)
        printf("%d ", a[i]);

    return 0;
}

// 69. second largest element in an array.
#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a[n];
    for(int i=0; i<n; i++) scanf("%d", &a[i]);

    int max1 = a[0], max2 = -99999;

    for(int i=1; i<n; i++) {
        if(a[i] > max1) {
            max2 = max1;
            max1 = a[i];
        }
        else if(a[i] > max2 && a[i] != max1)
            max2 = a[i];
    }

    printf("Second largest = %d", max2);
    return 0;
}

// 70. rotate sn array to the right by k positions.
#include <stdio.h>

int main() {
    int n, k;
    scanf("%d", &n);
    int a[n];

    for(int i=0; i<n; i++) scanf("%d", &a[i]);
    scanf("%d", &k);

    k = k % n;

    int b[n];
    for(int i=0; i<n; i++)
        b[(i+k) % n] = a[i];

    for(int i=0; i<n; i++)
        printf("%d ", b[i]);

    return 0;
}
