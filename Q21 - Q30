// 21: Write a program to display the month name and number of days using switch-case for a given month number.
#include <stdio.h>
int main() {
    int month;
    printf("enter month : ");
    scanf("%d", &month);
    switch (month) {
        case 1: printf("January\n 31 days\n");
              break;
        case 2: printf("February\n 28 days\n");
              break;
        case 3: printf("March\n 31 days\n");
              break;
        case 4: printf("April\n 30 days\n");
              break;
        case 5: printf("May\n 31 days\n");
              break;
        case 6: printf("June\n 30 days\n");
              break;
        case 7: printf("July\n 31 days\n");
              break;
        case 8: printf("August\n 31 days\n");
              break;
        case 9: printf("September\n 30 days\n");
              break;
        case 10: printf("October\n 31 days\n");
              break;
        case 11: printf("November\n 30 days\n");
              break;
        case 12: printf("December\n 31 days\n");
              break;
    }
    return 0;
}

// 22: Write a program to find profit or loss percentage given cost price and selling price
#include <stdio.h>
int main() {
    float cp, sp;
    printf("enter cp : ");
    scanf("%f", &cp);
    printf("enter sp : ");
    scanf("%f", &sp);
    if(sp>cp) {
        printf("Profit % : %f\n", (sp-cp)/cp*100);
    } else if(cp>sp) {
        printf("Loss % : %f\n", (cp-sp)/cp*100);
    } 
    else {
        printf("on profit no loss");
    }
    return 0;
}

// 23: Write a program to calculate a library fine based on late days
#include <stdio.h>
int main() {
    int DaysAlloted, DaysKept;
    printf("enter DaysAlloted : ");
    scanf("%d", &DaysAlloted);
    printf("enter DaysKept : ");
    scanf("%d", &DaysKept);
  
    if(DaysKept > DaysAlloted) {
        printf("Fine (late days*100) : %d\n", (DaysKept-DaysAlloted)*100);
    } else if(DaysKept < DaysAlloted) {
        printf("Days left : %d\n", DaysAlloted-DaysKept);
    } 
    return 0;
}

// 24: Write a program to calculate an electricity bill based on units consumed
#include <stdio.h>
int main() {
    int units;
    printf("enter units consumed : ");
    scanf("%d", &units);
   printf("   Amount to be paid : %d\n", units*15);
    return 0;
}

// 25: Write a program to implement a basic calculator using switch-case for +, -, *, /, %.
#include <stdio.h>
int main() {
    int x, y;
    char op;
    printf("enter x : ");
    scanf("%d", &x);
    printf("enter y : ");
    scanf("%d", &y);
    printf("enter operator (+,-,*,/,%) : ");
    scanf(" %c", &op);    
    switch(op) {
        case '+' : printf("%d\n", x + y);
              break ;
        case '-' : printf("%d\n", x - y);
              break ;
        case '*' : printf("%d\n", x * y);
             break ;
        case '/' : printf("%d\n", x / y);
             break ;
        case '%' : printf("%d\n", x % y);
             break ;
    }
    return 0;
}

// 26: Write a program to print numbers from 1 to n.
#include <stdio.h>
int main() {
    int n;
    printf("enter n : ");
    scanf("%d", &n);
   for(int i =1; i<=n; i++) {
       printf("%d\n", i);
   }
    return 0;
}

// 27: Write a program to print the sum of the first n odd numbers.
#include <stdio.h>
#include<math.h>
int main() {
  int n, sum=0;
  printf("enter n : ");
  scanf("%d", &n);
 for(int i=1; i<=n; i=i+2) {
     sum = sum + i;
     printf("%d\n", sum);
 }
 
  
    return 0;
}

//28: Write a program to print the product of even numbers from 1 to n
#include <stdio.h>
int main() {
   int n;
   printf("enter n : ");
   scanf("%d", &n);
   long long product = 1;
   for(int i =2; i<=n; i=i+2) {
         product = product * i;
       printf("product is %d\n", product);
     
   }

    return 0;
}

// 29: Write a program to calculate the factorial of a number
#include <stdio.h>
int main() {
    int n, fact=1;
    printf("enter n : ");
    scanf("%d", &n);
    for(int i=1; i<=n; i++) {
        fact = fact*i;
    }
      printf("%d\n", fact);
  
    return 0;
}

// 30:Online C compiler to run C program online
#include <stdio.h>
int main() {
int n, r, rev=0;  
 printf("enter n : ");
 scanf("%d", &n);
 while(n!=0) {
     r=n%10;
     rev=rev*10+r;
     n=n/10;
 }
 printf("reversed number is : %d", rev);
    return 0;
}
