// 81. count charcaters in an string without using built in length function.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    int i=0;
    while(s[i] != '\0') i++;

    printf("Length = %d", i);
    return 0;
}

// 82. each character of a string of a new line. 
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    for(int i=0; s[i]!='\0'; i++)
        printf("%c\n", s[i]);

    return 0;
}

// 83. count vowels and consonants in a string.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    int v=0, c=0;
    for(int i=0; s[i]!='\0'; i++) {
        char ch = s[i];
        if((ch>='A' && ch<='Z') || (ch>='a' && ch<='z')) {
            ch = (ch>='A'&&ch<='Z') ? ch+32 : ch;
            if(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u')
                v++;
            else
                c++;
        }
    }
    printf("Vowels=%d Consonants=%d", v, c);
    return 0;
}

// 84. convert a lowercase string to uppercase without using built in functions.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    for(int i=0; s[i]!='\0'; i++)
        if(s[i]>='a' && s[i]<='z')
            s[i] = s[i] - 32;

    printf("%s", s);
    return 0;
}

// 85. reverse a string.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    int i=0;
    while(s[i]!='\0') i++;

    for(int j=i-1; j>=0; j--)
        printf("%c", s[j]);

    return 0;
}

// 86. check if a string is a palindrome.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    int i=0;
    while(s[i]) i++;

    int flag=1;
    for(int j=0, k=i-1; j<k; j++,k--)
        if(s[j] != s[k]) flag=0;

    if(flag) printf("Palindrome");
    else printf("Not palindrome");
    return 0;
}

// 87. count spaces, digits, and special characters in a string.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    int sp=0, d=0, sc=0;

    for(int i=0; s[i]; i++) {
        if(s[i]==' ') sp++;
        else if(s[i]>='0' && s[i]<='9') d++;
        else if( !( (s[i]>='A'&&s[i]<='Z') || (s[i]>='a'&&s[i]<='z') ) )
            sc++;
    }

    printf("Spaces=%d Digits=%d Special=%d", sp,d,sc);
    return 0;
}

// 88. replace spaces with hypens in a string.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    for(int i=0; s[i]; i++)
        if(s[i]==' ') s[i]='-';

    printf("%s", s);
    return 0;
}

// 89. count frequency of a given character in a string.
#include <stdio.h>

int main() {
    char s[100], ch;
    scanf("%[^\n]", s);
    getchar();
    scanf("%c", &ch);

    int cnt=0;
    for(int i=0; s[i]; i++)
        if(s[i]==ch) cnt++;

    printf("Frequency = %d", cnt);
    return 0;
}

// 90. toggle case of each character in a string.
#include <stdio.h>

int main() {
    char s[100];
    scanf("%[^\n]", s);

    for(int i=0; s[i]; i++) {
        if(s[i]>='a' && s[i]<='z') s[i]-=32;
        else if(s[i]>='A' && s[i]<='Z') s[i]+=32;
    }

    printf("%s", s);
    return 0;
}

